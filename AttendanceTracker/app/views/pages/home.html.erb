<header>
    <h1>Attendance Track</h1>
</header>

<div class="login-text">
    <h2>Attendance Tracking Made Easy!</h2>
    <p>Sign in Now to Experience True Attendance Tracking</p>
</div>



<div class="login-page">
    <div class="form">
        <p class="login-top-text">LET'S GET STARTED</p>
        <form class="login-form">
            <%= form_for :user do |f| %>
            <%= f.text_field :email, placeholder: "example@email.com" %>
            <%= f.text_field :password, placeholder: "password" %>
            <div class="login-button">
                <%= f.submit "Submit" %>
            </div>
            <% end %>
            
        </form>
    </div>
</div>

<footer>
    <p>Test Buttons for Student/Teacher view</p>
    <%= link_to'Teacher View', new_teacher_attendance_path %>
    <%= link_to'Student View', new_student_attendance_path %>
    
    <% if current_user %>
    <%= link_to 'Sign Out', destroy_user_session_path, method: :delete%>
    <% else %>
    <%= link_to 'Sign in' , new_user_session_path %>
    <%= link_to 'Sign Up', new_user_registration_path%>
   <% end %>
</footer>