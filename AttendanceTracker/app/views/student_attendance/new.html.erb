<header>
  <h1>New Course Enrollment</h1>
</header>

<%= form_for :student_attendnace do |f| %>
  <div class="studentView">
  <p>
    <center>
    <%= f.label :CourseName, 'Course Name' %><br>
    <%= f.text_field :CourseName %>
    </center>
  </p>
 
  <p>
    <center>
    <%= f.label :ClassCode, 'Class Code' %><br>
    <%= f.text_area :ClassCode %>
    </center>
  </p>
 
  <p>
    <center>
    <%= f.submit "Enroll" %>
    </center>
  </p>
  </div>
<% end %>

<footer>
    <p>Test Buttons for Debugging/TAs</p>
    <%= link_to 'Home Page', root_path%>
    <%= link_to'Teacher View', new_teacher_attendance_path %>
    <%= link_to'Student View', new_student_attendance_path %>
    
    <% if current_user %>
    <%= link_to 'Sign Out', destroy_user_session_path, method: :delete%>
    <% else %>
    <%= link_to 'Sign in' , new_user_session_path %>
    <%= link_to 'Sign Up', new_user_registration_path%>
   <% end %>
</footer>